@model RecipeOrganizatorMVC.Models.Recipe

<div class="container">
    <h2>Edit Recipe</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id"/>

        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Cuisine" class="control-label"></label>
            <input asp-for="Cuisine" class="form-control"/>
            <span asp-validation-for="Cuisine" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CookingTime" class="control-label"></label>
            <input asp-for="CookingTime" class="form-control"/>
            <span asp-validation-for="CookingTime" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Difficulty" class="control-label"></label>
            <select asp-for="Difficulty" asp-items="Html.GetEnumSelectList<RecipeDifficulty>()" class="form-control"></select>
            <span asp-validation-for="Difficulty" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ImageUrl" class="control-label"></label>
            <input asp-for="ImageUrl" class="form-control"/>
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary"/>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>