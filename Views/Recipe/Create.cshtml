@model RecipeOrganizatorMVC.Models.Recipe

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2 class="mb-4">Create New Recipe</h2>

            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Name" class="form-label">Recipe Name</label>
                                    <input asp-for="Name" class="form-control" placeholder="Enter recipe name" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Cuisine" class="form-label">Cuisine</label>
                                    <input asp-for="Cuisine" class="form-control" placeholder="Enter cuisine type" />
                                    <span asp-validation-for="Cuisine" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Description" class="form-label">Description (Optional)</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter recipe description"></textarea>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Ingredients" class="form-label">Ingredients</label>
                            <textarea asp-for="Ingredients" class="form-control" rows="4" placeholder="List ingredients (one per line)"></textarea>
                            <span asp-validation-for="Ingredients" class="text-danger"></span>
                            <small class="form-text text-muted">Enter each ingredient on a new line</small>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Instructions" class="form-label">Cooking Instructions</label>
                            <textarea asp-for="Instructions" class="form-control" rows="5" placeholder="Enter step-by-step cooking instructions"></textarea>
                            <span asp-validation-for="Instructions" class="text-danger"></span>
                            <small class="form-text text-muted">Provide detailed cooking steps</small>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="CookingTime" class="form-label">Cooking Time (minutes)</label>
                                    <input asp-for="CookingTime" class="form-control" type="number" min="1" max="240" />
                                    <span asp-validation-for="CookingTime" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="Difficulty" class="form-label">Difficulty Level</label>
                                    <select asp-for="Difficulty" asp-items="Html.GetEnumSelectList<RecipeDifficulty>()" class="form-select">
                                        <option value="">Select Difficulty</option>
                                    </select>
                                    <span asp-validation-for="Difficulty" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="ImageUrl" class="form-label">Recipe Image URL</label>
                                    <input asp-for="ImageUrl" class="form-control" placeholder="https://example.com/image.jpg" />
                                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer">
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                            <button type="submit" class="btn btn-primary">Create Recipe</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}